<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="9dp"
    android:layout_marginEnd="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:orientation="vertical"
    >

    <LinearLayout

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:background="@color/bluegray3"
        android:orientation="vertical"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/c3">

            <TextView
                android:id="@+id/head"
                android:layout_width="wrap_content"
android:textSize="17dp"

                android:layout_height="30dp"
                android:padding="5dp"

                android:paddingLeft="5dp"
                android:paddingRight="5dp"

                android:text="Area"
                android:textColor="@color/white" />




                <Button
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/addtag"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="right"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/ic_save_green_24dp"
android:backgroundTint="@color/white"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text=""
                    android:textColor="@color/white" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingLeft="3dp"
            android:visibility="gone">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rdex"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/radioback"
                    android:button="@android:color/transparent"
                    android:padding="4dp"
                    android:text="Existing"
                    android:textSize="12dp" />

                <RadioButton
                    android:id="@+id/rdnew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/radioback"
                    android:button="@android:color/transparent"
                    android:padding="4dp"
                    android:text="New"
                    android:textSize="12dp" />

            </RadioGroup>

        </LinearLayout>

        <LinearLayout

            android:id="@+id/layoutarea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:paddingLeft="5dp">

            <LinearLayout
                android:id="@+id/layoutid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:visibility="visible">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/btn_round">

                    <AutoCompleteTextView
                        android:id="@+id/id"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:hint="Area code"
                        android:paddingBottom="2dp"
                        android:paddingLeft="5dp"

                        android:text=""
                        android:textSize="14dp" />


                </android.support.design.widget.TextInputLayout>
                <LinearLayout

                    android:backgroundTint="@color/white"
                    android:layout_gravity="center"
                    android:background="@drawable/rounddrw"
                    android:layout_width="30dp"
                    android:layout_height="30dp">

                    <ImageButton
                        android:layout_gravity="center"
                        android:backgroundTint="@color/dgreen"
                        android:id="@+id/nextcode"
                        android:background="@drawable/ic_navigate_next_white_24dp"

                        android:layout_width="30dp"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/btn_round">

                    <AutoCompleteTextView
                        android:id="@+id/tag"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:hint="Area name"
                        android:paddingBottom="2dp"
                        android:paddingLeft="5dp"
                        android:text=""
                        android:textSize="14dp" />


                </android.support.design.widget.TextInputLayout>
                <LinearLayout

                    android:backgroundTint="@color/white"
                    android:layout_gravity="center"
                    android:background="@drawable/rounddrw"
                    android:layout_width="30dp"
                    android:layout_height="30dp">

                    <ImageButton
                        android:layout_gravity="center"
                        android:backgroundTint="@color/dgreen"
                        android:id="@+id/nextname"
                        android:background="@drawable/ic_navigate_next_white_24dp"

                        android:layout_width="30dp"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>