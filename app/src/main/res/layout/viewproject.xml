<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CardView.Light"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/plantbg2"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

<android.support.constraint.ConstraintLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/addprjct"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/name_shapebtn"
        android:drawableRight="@drawable/ic_add_black_24dp"
        android:drawableTint="@color/c3_light"
        android:gravity="center"
        android:paddingBottom="2dp"
        android:paddingLeft="12dp"
        android:paddingTop="2dp"
        android:text="New"
        android:textColor="@color/c3_light"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.96"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:background="@color/c3_light"
        android:padding="5dp"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:paddingTop="5dp"

        android:paddingLeft="10dp"

        android:textColor="@color/white"
        android:textSize="18dp"
        android:text="Project"
   android:gravity="center_vertical"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout3"
        android:layout_width="280dp"
        android:layout_height="59dp"
        android:layout_marginBottom="27dp"
        android:layout_marginEnd="62dp"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="62dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="60dp"
        android:layout_weight="0.5"
        android:elevation="3dp"
        android:background="@drawable/edittextshadow"
        app:layout_constraintBottom_toTopOf="@+id/textInputLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline2">

        <AutoCompleteTextView
            android:id="@+id/prjctname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"

            android:hint="Project.no"
            android:paddingBottom="2dp"
            android:paddingLeft="5dp"
            android:textSize="14dp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout

        android:id="@+id/textInputLayout2"
        android:layout_width="282dp"
        android:layout_height="150dp"
        android:layout_marginBottom="23dp"
        android:layout_marginEnd="60dp"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="60dp"
        android:layout_marginStart="42dp"
        android:layout_weight="0.5"
        android:background="@drawable/edittextshadow"
        android:elevation="3dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout3">

        <AutoCompleteTextView
            android:paddingTop="5dp"
            android:gravity="top"
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"

            android:hint="Description"
            android:paddingBottom="2dp"
            android:paddingLeft="5dp"
            android:textSize="14dp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.73" />

    <TextView
        android:visibility="gone"
        android:id="@+id/addtag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="262dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="262dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:background="@color/c2"
        android:drawableLeft="@drawable/ic_add_black_24dp"
        android:gravity="center"
        android:paddingRight="5dp"
        android:text="Add tag"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline3" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.68101764" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="352dp"
        android:layout_height="141dp"
        android:layout_marginBottom="9dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline4" />
</android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>