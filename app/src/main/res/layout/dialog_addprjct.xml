<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="9dp"

    android:background="@android:color/transparent"
    android:layout_marginTop="8dp"
    android:orientation="vertical"

    >


    <LinearLayout
       android:layout_marginTop="10dp"
        android:background="@drawable/dialogbrd"

        android:visibility="visible"

        android:layout_marginRight="5dp"

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:visibility="gone"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioGroup
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/rdex"

                    android:layout_marginRight="5dp"
                    android:padding="4dp"
                    android:button="@android:color/transparent"
                    android:background="@drawable/radioback"
                    android:textSize="12dp"
                    android:text="Existing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/rdnew"
                    android:layout_marginRight="5dp"
                    android:padding="4dp"
                    android:button="@android:color/transparent"
                    android:background="@drawable/radioback"
                    android:textSize="12dp"
                    android:text="New"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RadioGroup>

        </LinearLayout>
        <LinearLayout

            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/layoutarea"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:paddingTop="10dp"
                android:layout_marginLeft="3dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputLayout
                    android:layout_marginRight="2dp"
                    android:layout_width="100dp"
                android:layout_weight="0.5"
                    android:textColorHint="@color/f1"
                    android:background="@drawable/btn_round"
                    android:layout_height="50dp">
                    <AutoCompleteTextView
                        android:id="@+id/prjctid"
                        android:paddingBottom="2dp"
                        android:paddingLeft="5dp"
                        android:background="@android:color/transparent"
                        android:textSize="14dp"
                        android:hint="Project Id"
                        android:text=""
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />


                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:paddingTop="5dp"
        android:layout_marginLeft="3dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"

        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:layout_marginRight="2dp"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:textColorHint="@color/f1"
            android:background="@drawable/btn_round"
            android:layout_height="50dp">
            <AutoCompleteTextView
                android:id="@+id/prjctname"
                android:paddingBottom="2dp"
                android:paddingLeft="5dp"
                android:background="@android:color/transparent"
                android:textSize="14dp"
                android:hint="Project name"
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="3dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputLayout
                    android:layout_marginRight="2dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:minHeight="100dp"
android:textColorHint="@color/f1"

                    android:background="@drawable/btn_round"
                    android:layout_height="wrap_content">
                    <AutoCompleteTextView
android:paddingTop="2dp"
                        android:maxLines="7"
                        android:id="@+id/description"
                        android:paddingBottom="2dp"
                        android:paddingLeft="5dp"
                        android:background="@android:color/transparent"
                        android:textSize="14dp"
                        android:hint="Description"
                        android:text=""
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />


                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

    </LinearLayout>



        <Button

            android:layout_gravity="right"
            android:id="@+id/addtag"
            android:paddingRight="5dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"
            android:layout_marginBottom="15dp"
            android:gravity="center"
android:paddingLeft="5dp"
            android:background="@drawable/btndialog"

            android:text="Create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:background="@android:color/transparent"
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
android:id="@+id/head"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@color/c3"
            android:text="New Project"
            android:layout_width="wrap_content"
            android:layout_height="25dp" />

    </LinearLayout>

</RelativeLayout>