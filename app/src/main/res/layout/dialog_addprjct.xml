<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"


    android:background="@android:color/transparent"

    android:orientation="vertical"

    >
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/laydescmore"
        android:background="@drawable/btn_rounddd"
        android:weightSum="1"

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<android.support.design.widget.TextInputLayout
    android:layout_width="match_parent"


    android:layout_height="match_parent">

    <EditText

        android:id="@+id/viewdesc"
android:padding="5dp"
        android:textColorHint="@color/colorPrimary"
     android:background="@android:color/transparent"
        android:gravity="top"
        android:hint="Description"
        android:text=""
        android:minHeight="250dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_marginBottom="10dp"
android:layout_marginRight="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:background="@drawable/rounddrw"
          android:layout_alignParentRight="true">

            <ImageButton
           android:id="@+id/descless"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"

                android:background="@drawable/ic_navigate_next_white_24dp"
 />
        </LinearLayout>


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/viewless"

        android:background="@drawable/dialogbrd"

        android:visibility="visible"



        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/c3">

            <TextView
                android:gravity="center"
                android:id="@+id/head"
                android:layout_width="wrap_content"
                android:textSize="17dp"

                android:layout_height="match_parent"


                android:paddingLeft="5dp"
                android:paddingRight="5dp"

                android:text="New Project"
                android:textColor="@color/white" />


            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true">

                <Button


                    android:id="@+id/addtag"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/ic_save_green_24dp"
                    android:backgroundTint="@color/white"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text=""
                    android:textColor="@color/white" />
            </LinearLayout>



        </RelativeLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioGroup
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/rdex"

                    android:layout_marginRight="5dp"
                    android:padding="4dp"
                    android:button="@android:color/transparent"
                    android:background="@drawable/radioback"
                    android:textSize="12dp"
                    android:text="Existing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/rdnew"
                    android:layout_marginRight="5dp"
                    android:padding="4dp"
                    android:button="@android:color/transparent"
                    android:background="@drawable/radioback"
                    android:textSize="12dp"
                    android:text="New"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RadioGroup>

        </LinearLayout>
        <LinearLayout

            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/layoutarea"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button

android:visibility="gone"
                android:layout_gravity="right"

                android:paddingRight="5dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/white"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:padding="5dp"
android:backgroundTint="@color/dgreen"
                               android:background="@drawable/ic_save_green_24dp"

                android:text=""
                android:layout_width="45dp"
                android:layout_height="45dp" />
            <LinearLayout
                android:id="@+id/layprjctid"
                android:paddingTop="10dp"
                android:layout_marginLeft="10dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputLayout
                    android:layout_marginRight="2dp"
                    android:layout_width="100dp"
                android:layout_weight="0.5"
                    android:textColorHint="@color/grey"
                    android:background="@drawable/btn_round"
                    android:layout_height="50dp">
                    <AutoCompleteTextView


                        android:id="@+id/prjctid"
                        android:paddingBottom="2dp"
                        android:paddingLeft="5dp"
                        android:background="@android:color/transparent"
                        android:textSize="14dp"
                        android:hint="Project Id"
                        android:text=""
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />


                </android.support.design.widget.TextInputLayout>
                <LinearLayout

                  android:layout_gravity="center"
                    android:background="@drawable/rounddrw"
                    android:layout_width="30dp"
                    android:layout_height="30dp">

                    <ImageButton
                        android:layout_gravity="center"
                       android:id="@+id/nextproject"
                        android:background="@drawable/ic_navigate_next_white_24dp"

                        android:layout_width="30dp"
                        android:layout_height="match_parent" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layprjctname"
                android:paddingTop="5dp"
        android:layout_marginLeft="10dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"

        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:layout_marginRight="2dp"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:textColorHint="@color/grey"
            android:background="@drawable/btn_round"
            android:layout_height="50dp">
            <AutoCompleteTextView
                android:id="@+id/prjctname"
                android:paddingBottom="2dp"
                android:paddingLeft="5dp"
                android:background="@android:color/transparent"
                android:textSize="14dp"
                android:hint="Project name"
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </android.support.design.widget.TextInputLayout>
                <LinearLayout
                    android:layout_gravity="center"
                    android:background="@drawable/rounddrw"
                    android:layout_width="30dp"
                    android:layout_height="30dp">

                    <ImageButton
                       android:id="@+id/nextname"
                        android:background="@drawable/ic_navigate_next_white_24dp"

                        android:layout_width="30dp"
                        android:layout_height="30dp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/laydesc"
                android:layout_marginLeft="10dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputLayout
                    android:layout_marginRight="2dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:minHeight="100dp"
android:textColorHint="@color/grey"

                    android:background="@drawable/btn_round"
                    android:layout_height="wrap_content">
                    <AutoCompleteTextView
android:paddingTop="2dp"
                        android:editable="false"
                        android:gravity="top"
                        android:maxLines="7"
                        android:id="@+id/description"
                        android:paddingBottom="2dp"
                        android:paddingLeft="5dp"
                        android:background="@android:color/transparent"
                        android:textSize="14dp"
                        android:hint="Description"
                        android:text=""
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />


                </android.support.design.widget.TextInputLayout>
                <LinearLayout
                android:layout_gravity="center"
                    android:background="@drawable/rounddrw"
                    android:layout_width="30dp"
                    android:layout_height="30dp">

                    <ImageButton
                      android:id="@+id/nextdescription"
                        android:background="@drawable/ic_navigate_next_white_24dp"

                        android:layout_width="30dp"
                        android:layout_height="30dp" />
                </LinearLayout>
            </LinearLayout>

    </LinearLayout>




    </LinearLayout>
    <LinearLayout
        android:background="@android:color/transparent"
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
android:visibility="gone"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@color/c3"
            android:text="New Project"
            android:layout_width="wrap_content"
            android:layout_height="25dp" />

    </LinearLayout>

</RelativeLayout>